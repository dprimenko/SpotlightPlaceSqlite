<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.dpinfo.spotlightplace">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".SpotlightApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_spotlight"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_place_api"></meta-data>

        <provider
            android:authorities="es.dpinfo.spotlightplace"
            android:name=".provider.SpotlightProvider" />

        <activity android:name=".VerificationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>

    </application>

</manifest>
